         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.panlingxiao.spring-learnig</groupId>
    <artifactId>spring-learning</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Spring-Learning</name>
    <description>个人对Spring-FrameWork框架的复习总结以及源码分析研究</description>

    <scm>
        <url>https://github.com/plx927/spring-learning</url>
        <tag>http://www.jianshu.com/users/dc9be3b69337/latest_articles</tag>
    </scm>

    <developers>
        <developer>
            <name>潘凌霄</name>
            <email>784580872@qq.com</email>
        </developer>
    </developers>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>1.8</java.version>
        <servlet-api.version>3.1.0</servlet-api.version>
        <spring.version>4.3.16.RELEASE</spring.version>
        <jackson.version>2.5.4</jackson.version>
    </properties>

    <modules>
        <module>spring-learning-ioc</module>
        <module>spring-learning-aop</module>
        <module>spring-learning-conversion</module>
        <module>spring-learning-cache</module>
        <module>spring-learning-task</module>
        <module>spring-learning-tx</module>
        <module>spring-learning-webmvc</module>
        <module>spring-learning-web-config</module>
